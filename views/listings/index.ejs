<% layout("/layouts/boilerplate.ejs") %>
<body>

  <style>
    #filter{
      display: flex;
      flex-wrap: wrap;
      align-items: center;
    }

    .filter{
      text-align: center;
      margin-right: 2rem;
      margin-top: 1.5rem;
      opacity: .7;
      
    }

    .filter:hover{
      opacity: 1;
      cursor: pointer;
    }

    .filter p{
      font-size: 0.8rem;
    }

    .tax-info{
      display: none;
    }

    .tax-toggle{
      border: 1px solid black;
      border-radius: 1rem;
      height: 3.2rem;
      padding: 1rem;
      margin-left: 15rem;
      display: flex;
      align-items: center;
    }

    a{
      text-decoration: none;
      color: black;
    }
    
  </style>

  <div id="filter">
    <div class="filter">
      <div><i class="fa-solid fa-fire listing-filter"></i></div>
      <a href="/listing/category/trending" >Trending</a>
      </div>

      <div class="filter">
        <div><i class="fa-solid fa-bed"></i></div>
        <a href="/listing/category/rooms">Rooms</a>
        </div>

        <div class="filter">
          <div><i class="fa-solid fa-mountain-city"></i></div>
          <a href="/listing/category/cities">Cities</a>
          </div>
  
          <div class="filter">
            <div><i class="fa-solid fa-mountain"></i></div>
            <a href="/listing/category/mountains">Mountains</a>
            </div>

            
            <div class="filter">
              <div><i class="fa-solid fa-snowflake"></i></div>
              <a href="/listing/category/artic">Artic</a>
              </div>

              <div class="filter">
                <div><i class="fa-solid fa-campground"></i></div>
                <a href="/listing/category/camping>">Camping</a>
                </div>

                <div class="filter">
                  <div><i class="fa-solid fa-cow"></i></div>
                  <a href="/listing/category/farms">Farms</a>
                  </div>

                  <div class="filter">
                    <div><i class="fa-solid fa-person-swimming"></i></div>
                    <a href="/listing/category/amazing pools">Amazing Pools</a>
                    </div>
      
        <div class="tax-toggle">
          <div class="form-check-reverse form-switch">
            <input class="form-check-input" type="checkbox" role="switch" id="flexSwitchCheckDefault">
            <label class="form-check-label" for="flexSwitchCheckDefault">Display Total After Taxes</label>
          </div>
        </div>


  </div>

    <!-- <h3 class="head-line">All Listings</h3> -->

    <!-- <form method="GET" action="/listing/new">
        <button>Create New Listing</button>
    </form> -->

    <div class="row row-cols-lg-3 row-cols-md-3 row-cols-sm-1 full-card mt-2">

        <% for(let list of allListings){ %>

            <a href="/listing/<%=list._id%>" class="listing-link">

            <div class="card col listing-card">
                <img src="<%= list.image.url %>" class="card-img-top" alt="listing_image" style="height: 20rem;" />
                <div class="card-img-overlay"></div>
                <div class="card-body">
                  <p class="card-text">
                    <b><%= list.title %></b> <br/>
                    &#8377; <%= (list.price || 0).toLocaleString("en-IN") %> / Night
                  <i class="tax-info"> &nbsp; &nbsp;+18% GST</i> </p>
                </div>
              </div>

            </a>
        
              <% } %>

    </div>

 

<!-- 
      <ul>
 
        <% for(let list of allListings){ %>
        
            <li><a href="/listing/<%= list._id %>"><%= list.title %></a></li>
   <% } %>

</ul> -->

<script>
  let taxSwitch = document.getElementById("flexSwitchCheckDefault");
  taxSwitch.addEventListener("click", ()=>{

    let taxInfo = document.getElementsByClassName("tax-info");
    for(info of taxInfo){
      if(info.style.display != "inline"){
        info.style.display = "inline";
      }else{
        info.style.display = "none";
      }
    }

  })
</script>
    
</body>
